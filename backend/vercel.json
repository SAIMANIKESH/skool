{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": null,
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/api" },
    { "source": "/chat", "destination": "/api" },
    { "source": "/(.*)", "destination": "/api" }
  ]
}
